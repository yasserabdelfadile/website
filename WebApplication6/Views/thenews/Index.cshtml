@model IEnumerable<WebApplication6.Models.thenews>

@{
    ViewData["Title"] = "Index";
}
<div class="container">

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                    Date
            </th>
            <th>
                    Catogry
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.thedate)
            </td>
           
            <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="width:70px">Edit</a>  <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary" style="width:70px">Details</a>
               
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width:70px">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>