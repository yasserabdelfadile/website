@model tocontactus
<div claa="center">
    <div class="container " style="margin-top:25px;margin-bottom:25px">
        <div class="col-6">
            <form asp-action="savecontact">
                <div class="row">
                    <div class="col form-group  col form-group mt-3">
                        <input type="text" asp-for="Name" class="form-control" placeholder="Your Name" required="">
                    </div>
                    <div class="col form-group mt-3">
                        <input type="email" class="form-control" asp-for="email" placeholder="Your Email" required="">
                    </div>
                </div>
                <div class="form-group mt-3">
                    <input type="text" class="form-control" asp-for="titalmassag" placeholder="Subject" required="">
                </div>
                <div class="form-group mt-3">
                    <textarea class="form-control" asp-for="massag" rows="5" placeholder="Message" required=""></textarea>
                </div>

                <div class="col form-group mt-3"><button class="btn btn-success" type="submit">Send Message</button></div>
            </form>
        </div>
    </div>
</div>